{
  "description": "Reconstruction-only test - verify encoder+decoder work before adding image priors",
  "device": "cuda",
  "output_dir": "./outputs/phase1_recon_test",

  "model": {
    "vocab_size": 50257,
    "max_seq_len": 64,
    "hidden_size": 384,
    "num_layers": 6,
    "num_heads": 8,
    "ffn_size": 1536,
    "dropout": 0.1,
    "grid_size": 32,
    "num_channels": 6,
    "use_rope": true,
    "use_smooth_head": true,
    "tokenizer_name": "gpt2"
  },

  "loss": {
    "lambda_spec": 0.01,
    "lambda_tv": 0.01,
    "lambda_wav": 0.01,
    "lambda_kurt": 0.01,
    "lambda_cov": 0.01,
    "lambda_var": 0.01,
    "lambda_recon": 1.0
  },

  "decoder": {
    "vocab_size": 50257,
    "max_seq_len": 64,
    "hidden_size": 384,
    "num_layers": 4,
    "num_heads": 8,
    "ffn_size": 1536,
    "dropout": 0.1,
    "use_rope": true
  },

  "training": {
    "batch_size": 128,
    "lr": 2e-4,
    "beta1": 0.9,
    "beta2": 0.95,
    "weight_decay": 0.01,
    "warmup_steps": 500,
    "num_epochs": 1000,
    "max_steps": 5000,
    "ema_decay": 0.999,
    "grad_clip": 1.0,
    "blur_sigma": 0.8,
    "blur_warmup_steps": 1000
  },

  "data": {
    "train_file": "../train_sentences.txt",
    "val_file": "../val_sentences.txt",
    "num_workers": 2,
    "file_format": "txt"
  },

  "eval": {
    "eval_interval": 250,
    "save_interval": 1000,
    "num_fixed_sentences": 16
  }
}
